# AreaMÃ©dica API - Production Environment Variables
# Copy this file and configure for Render deployment
# These values should be set as Environment Secrets in Render Dashboard

# ===================================
# Application Settings
# ===================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_VERSION=1.0.0

# ===================================
# Security
# ===================================
# IMPORTANT: Generate a secure secret key for production
# Use: openssl rand -hex 32
SECRET_KEY=your_production_secret_key_here_min_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# Database (Auto-configured by Render)
# ===================================
# These are automatically set by Render from the PostgreSQL service
# DATABASE_URL=postgresql://user:password@host:port/database
# DATABASE_HOST=hostname
# DATABASE_PORT=5432
# DATABASE_NAME=areamedica
# DATABASE_USER=areamedica_user
# DATABASE_PASSWORD=auto_generated_password

# ===================================
# Redis Cache (Auto-configured by Render)
# ===================================
# These are automatically set by Render from the Redis service
# REDIS_HOST=hostname
# REDIS_PORT=6379
# REDIS_PASSWORD=auto_generated_password
# REDIS_DB=0

# ===================================
# CORS Configuration
# ===================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://areamedica.com,https://www.areamedica.com,https://admin.areamedica.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_STORAGE=redis

# ===================================
# Banesco API Integration
# ===================================
# REQUIRED: Get these credentials from Banesco
BANESCO_API_URL=https://api.banesco.com/v1
BANESCO_API_KEY=your_banesco_api_key_here
BANESCO_USERNAME=your_banesco_username
BANESCO_PASSWORD=your_banesco_password
BANESCO_TIMEOUT=30
BANESCO_MAX_RETRIES=3

# ===================================
# Monitoring & Observability
# ===================================
ENABLE_METRICS=true
ENABLE_TRACING=false
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking

# ===================================
# Performance
# ===================================
WORKERS=4  # Number of Uvicorn workers (adjust based on CPU cores)
MAX_CONNECTIONS=100
POOL_SIZE=20
POOL_MAX_OVERFLOW=10

# ===================================
# Security Headers
# ===================================
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'

# ===================================
# Feature Flags
# ===================================
ENABLE_SWAGGER_DOCS=false  # Disable in production for security
ENABLE_ADMIN_ENDPOINTS=false  # Disable admin endpoints in production
